<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:id="@+id/connection_state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Connection State"
            />
    <TextView
            android:id="@+id/lat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Latitude:"
            />
    <TextView
            android:id="@+id/lng"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Longtitude:"
            />
    <Button
            android:id="@+id/start_track_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lng"
            android:layout_centerHorizontal="true"
            android:onClick="startTrack"
            android:layout_marginTop="10dp"
            android:text="Start Tracking..." />
    <Button
            android:id="@+id/stop_track_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lng"
            android:layout_centerHorizontal="true"
            android:onClick="stopTrack"
            android:layout_marginTop="10dp"
            android:text="Stop Tracking..." />
    <Button
            android:id="@+id/get_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lng"
            android:layout_centerHorizontal="true"
            android:onClick="getLocation"
            android:layout_marginTop="10dp"
            android:text="getLocation" />
    <Button
            android:id="@+id/walk_mode_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_track_button"
            android:layout_centerHorizontal="true"
            android:onClick="switchWalkMode"
            android:layout_marginTop="10dp"
            android:text="Walk Mode" />
    <Button
            android:id="@+id/car_mode_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_track_button"
            android:layout_centerHorizontal="true"
            android:onClick="switchCarMode"
            android:layout_marginTop="10dp"
            android:text="Car Mode" />
    <TextView
            android:id="@+id/summary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Summary:"
            />
</LinearLayout>

